{
  "version": "1.0.0",
  "crawler": {
    "user_agent": "CheryEU-Compliance-Bot/1.0 (Internal Research; contact: compliance@chery.de)",
    "robots_txt_enforced": true,
    "deny_on_captcha_or_anti_bot": true,
    "canonicalize": {
      "strip_utm_params": true,
      "normalize_trailing_slash": true
    },
    "rate_limit": {
      "per_domain_rps": 0.2,
      "burst": 2
    }
  },
  "monitoring_stages": [
    "Drafting",
    "Official",
    "Comitology",
    "Interpreting",
    "Use&Registration"
  ],
  "tiers": {
    "TIER_A_BINDING": {
      "description": "Binding laws and regulations (hard law).",
      "allow_auto_extract": true,
      "allow_write_main": true,
      "route": "main",
      "domains": [
        "eur-lex.europa.eu",
        "op.europa.eu",
        "publications.europa.eu",
        "unece.org",
        "gesetze-im-internet.de",
        "legifrance.gouv.fr",
        "legislation.gov.uk"
      ]
    },
    "TIER_B_OFFICIAL_SIGNAL": {
      "description": "Official signals and pre-legislative guidance.",
      "allow_auto_extract": true,
      "allow_write_main": false,
      "route": "review_queue",
      "domains": [
        "kba.de",
        "utac.com",
        "rdw.nl",
        "vca.gov.uk",
        "idiada.com",
        "edpb.europa.eu",
        "edps.europa.eu",
        "ico.org.uk",
        "bfdi.bund.de",
        "bsi.bund.de",
        "cnil.fr",
        "enisa.europa.eu",
        "wiki.unece.org",
        "ec.europa.eu",
        "commission.europa.eu",
        "futurium.ec.europa.eu",
        "digital-strategy.ec.europa.eu",
        "globalautoregs.com",
        "www.gov.uk"
      ]
    },
    "TIER_C_SOFT_REQ": {
      "description": "Soft requirements and standards.",
      "allow_auto_extract": true,
      "allow_write_main": false,
      "route": "review_queue",
      "domains": [
        "euroncap.com",
        "iso.org",
        "din.de",
        "vda.de",
        "enx.com"
      ]
    },
    "TIER_D_QUARANTINE": {
      "description": "Intelligence sources (always quarantine).",
      "allow_auto_extract": true,
      "allow_write_main": false,
      "route": "review_queue",
      "domains": [
        "iapp.org",
        "euractiv.com",
        "globalprivacyblog.com",
        "blogs.dlapiper.com"
      ]
    }
  },
  "profiles": [
